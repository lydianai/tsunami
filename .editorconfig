# TSUNAMI Editor Configuration
# AILYDIAN AutoFix - Code Quality Enhancement
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 120

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# HTML/Jinja2 templates
[*.{html,jinja,jinja2}]
indent_size = 2

# CSS/SCSS
[*.{css,scss,sass}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 4

# Docker files
[Dockerfile*]
indent_size = 4
